{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs", // commonjs node, esnext browser
    "target": "ES2020",
    "removeComments": true,
    "composite": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  },
  "include": [
        "north/**/*.ts"
    ],
  "exclude": [
        "node_modules", "tests"
  ]
}
