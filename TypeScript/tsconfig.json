{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs", // commonjs node, esnext browser
    "target": "ES2020",
    "composite": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./north/*"
      ]
    }
  },
  "include": [
    "north/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
